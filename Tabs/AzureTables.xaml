<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tabs.AzureTables" Title="Information">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout Margin="20" Orientation="Vertical">
            <Button Text="See Photo Information" TextColor="White" BackgroundColor="#85C1E9" Clicked="Handle_ClickedAsync" />
            <ActivityIndicator x:Name="loading" Color="Red" IsRunning="true" IsVisible="false"/>
            <ListView x:Name="HotDogList" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding make}" Margin="0,10,0,20" VerticalTextAlignment="Center" />
                                <Label Text="{Binding model}" VerticalTextAlignment="Center" Margin="0,10,0,20" />
                                <Label Text="{Binding engine}" VerticalTextAlignment="Center" Margin="0,10,0,20" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>